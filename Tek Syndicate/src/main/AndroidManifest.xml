<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tspoon.teksyndicate"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <application
        android:name="com.tspoon.teksyndicate.App"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:logo="@drawable/ic_logo_grey"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.tspoon.teksyndicate.ActivityFeed"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.tspoon.teksyndicate.ActivitySettings"
            android:label="@string/action_settings" />
        
        <activity 
            android:name=".ActivityVideoView"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar" />
        
        <meta-data
            android:name="AA_DB_NAME"
            android:value="content.db" />
        <meta-data
            android:name="AA_DB_VERSION"
            android:value="1" />
        
    </application>

</manifest>
